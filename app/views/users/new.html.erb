<div class="content">
  <h1 class="title">Create Account</h1>
  <div class="form">
    <%= form_for @user do |f| %>
      <%= f.text_field :username, placeholder: 'Username' %>
      <%= f.password_field :password, placeholder: 'Password' %>
      <%= f.submit 'Submit' %>
    <% end %>
  </div>
  <br>
  <%= link_to "Back", root_path, class: "link register" %>
</div>
